{% import 'imports/macros.html.twig' as macros %}

<!DOCTYPE html>
<html {{ site.language_attributes }}>
{% block head %}
<head>

	<meta charset="{{ site.charset }}" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">

	<link rel="shortcut icon" type="image/x-icon" href="{{ site.url }}/favicon.ico">
	<link rel="icon" type="image/x-icon" href="{{ site.url }}/favicon.ico">
	
	{% block head_meta %}
		<meta name="HandheldFriendly" content="True">
		<meta name="MobileOptimized" content="320">
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
	{% endblock %}

	<link rel="profile" href="http://gmpg.org/xfn/11" />
	<link rel="pingback" href="{{ site.pingback_url }}" />

	{{ function('wp_head') }}

	{% block head_css %}{% endblock %}
	{% block head_scripts %}
		<!--[if lt IE 9]>
			<script src="{{ site.theme.link }}/library/html5shiv/html5shiv-printshiv.min.js" type="text/javascript"></script>
			<script src="{{ site.theme.link }}/library/respond.min.js" type="text/javascript"></script>
		<![endif]-->
	{% endblock %}

</head>
{% endblock %}

{% block body %}

	{% set banner_height = page_header.configuration == 'default' and page_header.banner_height_full ? ' banner-full-height' : '' %}

<body class="{{ body_class }}{{ banner_height }}">
	
	{% block page %}
		<div id="page" class="hfeed site">

			<a class="skip-link screen-reader-text" href="#main">Skip to content</a>
			
			{% block header %}
				<header id="header" role="banner">
					<div class="header__navbar">
						<div class="container">
							<div class="inner">
								<div class="header flex align-items-center justify-between">
									<div id="site-branding" class="header__branding flex-noshrink">
										{% if site_branding.logo %}
											<div class="header__branding-logo">
												<a href="{{ site.url }}/" rel="home">{{ site_branding.logo }}</a>
											</div>
										{% else %}
											<div id="site-title" class="header__branding__title"><a href="{{ site.url }}/" rel="home">{{ site.name }}</a></div>
											<div id="site-description" class="header__branding__description">{{ site.description }}</div>
										{% endif %}
									</div><!-- #site-branding -->

									{% block mobile_menu_toggle %}
										<button id="mobile-menu-toggle"><span class="label">Menu</span></button>
									{% endblock %}

									{% block header_navigation %}
										<nav id="header-navigation" role="navigation">
											{% include 'includes/menu.html.twig' with { 'items': theme.menus['header'].items } only %}
										</nav><!-- #header-navigation -->
									{% endblock %}

									<div class="header__donate">
										<a class="btn" href="{{ site_branding.donate['url'] }}"{{ site_branding.donate['newpage'] ? ' target="_blank"' }}>{{ site_branding.donate['label'] }}</a>
									</div>
								</div>


							</div><!-- .inner -->
						</div><!-- .container -->
					</div>

					{% block page_header_banner %}
						{% if page_header.configuration != 'disabled' %}
							{% if page_header.page_slider_enabled and page_header.page_header_slides %}
								<div class="page-header {{ page_header.configuration }} relative">
									<div class="page-header__slider" style="overflow: hidden;">
										{% for slide in page_header.page_header_slides %}
											<div class="slide">
												<div class="slide_image">
													<img src="{{ get_media_url(slide['page_header_slide_image'], '1600w') }}" alt="{{ get_media_alt_text(slide['page_header_slide_image']) }}" />
												</div>
											</div>
										{% endfor %}
									</div>
{#									{% block header_overlay %}#}
{#										{% if page_header.title or page_header.content %}#}
{#											<div class="page-header__overlay">#}
{#												<div class="container full-height">#}
{#													<div class="inner flex flex-column justify-between full-height">#}
{#														<div class="page-header__content flex flex-{{ page_header.content_width == 'partial' ? 'column align-self-' ~ page_header.content_position : 'row' }}">#}
{#															{% if page_header.configuration == 'default' %}#}
{#																{% if page_header.title %}<h1>{{ page_header.title }}</h1>{% endif %}#}
{#															{% endif %}#}
{#														</div>#}
{#													</div>#}
{#												</div>#}
{#											</div>#}
{#										{% endif %}#}
{#									{% endblock %}#}
								</div>
							{% else %}
								<div class="page-header {{ page_header.configuration }}" style="background-image: url({{ page_header.page_header_image ? page_header.page_header_image : site_branding.banner_default }});">
{#									{{ block('header_overlay') }}#}
								</div>
							{% endif %}
						{% else %}
{#							<div class="page-header {{ page_header.configuration }} relative">#}
{#								{% if page_header.display_title %}#}
{#									<div class="container">#}
{#										<h1 class="text-{{ page_header.title_alignment }}">{{ page_header.title }}</h1>#}
{#									</div>#}
{#								{% endif %}#}
{#							</div>#}
						{% endif %}
					{% endblock %}

				</header><!-- #header -->
			{% endblock %}

			{% block main %}
				<div id="main">
					
					{% block page_sections %}
						<div id="page-sections">
							{% block page_sections_inner %}

								{% set page_section_fallback_content %}
									{% block content %}{% endblock %}
								{% endset %}
								
								{% set page_section_fallback = {
									section_title: '',
									section_content: page_section_fallback_content,
									crown_repeater_entry_type: 'default-section'
								} %}
								{% set page_content_sections = [ page_section_fallback ] %}
								
								{% block page_sections_loop %}
									{% set prev_section = null %}
									{% set next_section = null %}
									{% for index, section in page_content_sections %}
										{% set next_section = page_content_sections[index + 1] ? page_content_sections[index + 1] : null %}
										{% include ['page-section/' ~ section.crown_repeater_entry_type ~ '.html.twig', 'page-section/default-section.html.twig'] %}
										{% set prev_section = section %}
									{% endfor %}
								{% endblock %}

							{% endblock %}
						</div>
					{% endblock %}

				</div><!-- #main -->
			{% endblock %}

			{% block footer %}
				<footer id="footer" role="contentinfo">
					<div class="container">
						<div class="inner">
							
							{% block footer_navigation %}
								<nav id="footer-navigation">
									{% include 'includes/menu.html.twig' with { 'items': theme.menus['footer'].items, 'max_depth': 2 } only %}
								</nav><!-- #footer-navigation -->
							{% endblock %}

							<p id="site-legal">
								&copy; {{ 'now'|date('Y') }} {{ site.title }}<br>
								<a href="http://www.jordancrown.com" title="Seattle web design company" rel="designer">Seattle Website Design</a> by Jordan Crown Design
							</p>

						</div><!-- .inner -->
					</div><!-- .container -->
				</footer><!-- #footer -->
			{% endblock %}

		</div><!-- #page -->
	{% endblock %}

	{% block mobile_menu %}
		<div id="mobile-menu">
			<div class="inner">
				{% block mobile_navigation %}
					<nav id="mobile-navigation">
						{% include 'includes/menu-nofollow.html.twig' with { 'items': theme.menus['mobile'].items } only %}
					</nav><!-- #mobile-navigation -->
				{% endblock %}
			</div>
		</div><!-- #mobile-menu -->
	{% endblock %}

	{% block photo_gallery_modal %}
		<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
			<div class="slides"></div>
			<h3 class="title"></h3>
			<a class="prev">‹</a>
			<a class="next">›</a>
			<a class="close">×</a>
			{# <a class="play-pause"></a> #}
			<ol class="indicator"></ol>
		</div>
	{% endblock %}

	{{ function('wp_footer') }}
	{% block footer_scripts %}{% endblock %}

</body>
{% endblock %}

</html>