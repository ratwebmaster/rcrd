{% extends 'index.html.twig' %}


{% block page_sections %}

	<section class="page-section">
		<div class="inner">
			<div class="container">
				<div class="inner">

					<div class="archive-return">
						<a class="link-back-archive" href="{{ get_url(site.theme_options_events_index_page) }}">Events</a> > <strong>{{ post.title }}</strong>
					</div>

					{{ block('primary') }}

				</div><!-- .inner -->
			</div><!-- .container -->
		</div><!-- .inner -->
	</section><!-- .page-section -->
{% endblock %}


{% block primary %}
	<div class="content-section" role="main">
		<div class="inner">
		
			<div id="post-{{ post.id }}" class="{{ post.class }}">
				{% block article_content %}

					{% if post.thumbnail %}
						<div class="event-image"><img src="{{ get_media_url(post.thumbnail, 'full') }}" /></div>
					{% endif %}
					<h1 class="entry-title">{{ post.title }}</h1>
					<div class="entry-meta">
						{% if post.meta.event_start_date %}
							<p class="event-date">{{ post.meta.event_start_date|date('m/j/Y') }}</p>
						{% endif %}
						<p class="event-time">
							{% if post.meta.event_time_doors %}<strong>{{ post.meta.event_time_doors }}</strong> doors open<br />{% endif %}
							{% if post.meta.event_time_whistle %}<strong>{{ post.meta.event_time_whistle }}</strong> first whistle{% endif %}
						</p>
						{% if post.meta.event_venue %}
							<p class="event-location h5">{{ post.meta.event_venue }}</p>
						{% endif %}
					</div>
					
					<div class="entry-content">
						{{ post.meta.event_details|content }}
					</div>

					{% if post.meta.event_ticket_link %}
						<div class="event-tickets"><a class="btn btn-primary outline" href="{{ post.meta.event_ticket_link }}" target="_blank">Get tickets</a></div>
					{% endif %}

				{% endblock %}
			</div>
			
			{% include 'includes/comments.html.twig' %}
		
		</div><!-- .inner -->
	</div><!-- .content-section.primary -->
{% endblock %}