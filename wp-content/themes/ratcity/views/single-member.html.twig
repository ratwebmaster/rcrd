{% extends 'index.html.twig' %}

{% block page_sections %}
	<section class="page-section primary">
		<div class="inner">
			<div class="container">
				<div class="inner">

					{{ block('content') }}

				</div><!-- .inner -->
			</div><!-- .container -->
		</div><!-- .inner -->
	</section><!-- .page-section -->
{% endblock %}


{% block primary %}
	<div class="content-section primary" role="main">
		<div class="inner">
		
			<article id="post-{{ post.id }}" class="{{ post.class }}">
				{% block article_content %}

					{% set skater_meta = get_post_meta(post.id) %}
					{% set id = post.id %}
					{% set img = post.meta._thumbnail_id %}

					<header class="flex justify-between">

						{% if img %}
							<div class="member__photo flex-noshrink">
								<div class="photo">
									<img src="{{ get_media_url(img, 'medium') }}" alt="{{ get_media_alt_text(img)|escape('html_attr') }}">
									{# srcset="{{ get_media_srcset(img) }}"#}
								</div>
							</div>
						{% endif %}

						<div class="flex-100">
							{% if post.meta.member_pronouns %}<p class="member_pronouns">Pronouns: {{ post.meta.member_pronouns }}</p>{% endif %}
							{% if post.meta.member_website %}<p class="member_pronouns">Website: {{ post.meta.member_website }}</p>{% endif %}
							{% if post.terms.member_team %}
								<div class="member_teams">
									<h3>Teams:</h3>
									<div class="flex">
										{% for team in post.terms.member_team if team.meta.team_logo %}
											<a class="team" href="{{ team.url }}"><img src="{{ get_media_url(team.meta.team_logo, 'thumbnail') }}" alt="{{ team.name|escape('html_attr') }}"></a>
										{% endfor %}
									</div>
								</div>
							{% endif %}
						</div>


					</header>
					
					<main class="member_bio">
						{{ post.meta.member_bio|content }}
					</main>

{#					<footer class="entry-meta">#}
{#						{% if post.terms['category'] %}#}
{#							<p class="entry-categories">Category: {{ macros.list_term_links(post.terms['category']) }}</p>#}
{#						{% endif %}#}
{#						{% if post.terms['post_tag'] %}#}
{#							<p class="entry-tags">Tags: {{ macros.list_term_links(post.terms['post_tag']) }}</p>#}
{#						{% endif %}#}
{#					</footer>#}

				{% endblock %}
			</article>
			
